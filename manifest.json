{
  "manifest_version": 2,
  "name": "StreetCleaningSF",
  "version": "1.0",

  "description": "Your Street Cleaning Reminder",
  "icons": {
    "16": "icons/broom-16.png",
    "48": "icons/broom-48.png",
    "128": "icons/broom-128.png"
  },

  "background": {
    "persistant": false,
    "script": ["popup.jsx"]
  },

  "browser_action": {
    "default_icon": {
      "19": "icons/broom-19.png",
      "38": "icons/broom-38.png"
    },
    "default_title": "Check Schedule",
    "default_popup": "popup.html"
  },

  "permissions": [
    "alarms",
    "storage",
    "notifications",
    "https://ajax.googleapis.com/"
  ]
}
